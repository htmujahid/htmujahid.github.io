---
import { Star, GitFork, Github } from "lucide-astro";

interface ProjectCardProps {
  title: string;
  description: string;
  primaryLanguage: string;
  languageColor: string;
  stars: number;
  forks: number;
  technologies: string[];
  githubUrl: string;
  lastUpdated: string;
}

const {
  title,
  description,
  primaryLanguage,
  languageColor,
  stars,
  forks,
  technologies,
  githubUrl,
  lastUpdated,
} = Astro.props as ProjectCardProps;
---

<div class="border border-border bg-card my-6">
  <div class="space-y-4 p-6">
    {/* Header Section */}
    <div class="flex flex-col items-start justify-between">
      <div class="flex-1 w-full">
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline"
        >
          <h3 class="text-xl font-semibold">{title}</h3>
        </a>
      </div>
      <p class="text-sm leading-relaxed">{description}</p>
    </div>

    {/* Technology Tags */}
    <div class="flex flex-wrap gap-2">
      {
        technologies.map(tech => (
          <span class="bg-muted px-2 py-1 text-xs font-medium">
            {tech}
          </span>
        ))
      }
    </div>

    {/* Stats Section */}
    <div class="flex items-center justify-between text-sm text-muted-foreground">
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-1">
          <div class={`w-3 h-3 ${languageColor} rounded-full`}></div>
          <span>{primaryLanguage}</span>
        </div>
        <div class="flex items-center gap-1">
          <Star class="h-4 w-4" />
          <span>{stars}</span>
        </div>
        <div class="flex items-center gap-1">
          <GitFork class="h-4 w-4" />
          <span>{forks}</span>
        </div>
      </div>
      <span class="text-xs">{lastUpdated}</span>
    </div>
  </div>
</div>
